{% extends 'base.html.twig' %}


{% block body %}

{% block title %}Index Utilisateurs{% endblock %}
    <h1>Utilisateurs index</h1>
<table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Noms</th>
                <th>Prénoms</th>
                <th>Photo</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
        {% for utilisateurs in Utilisateurs %}
        {# https://twig.symfony.com/doc/3.x/tags/for.html #}
            <tr>
                <td>{{ Utilisateurs.id }}</td>
                <td>{{ Utilisateurs.Noms }}</td>
                <td>{{ Utilisateurs.Prénoms }}</td>
                <td>{{ Utilisateurs.Photo }}</td>
                <td> <a href="{{ path('affichage', {'id':Utilisateurs.id}) }}"> Afficher </a> </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}

